.hdxq_hf_box {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 99;
    background: rgba(0,0,0,0.5);
    display: none;
}
.hdxq_hf_box.open {
    display: block;
}
.hdxq_hf_box .hdxq_hf_cont {
    position: fixed;
    width: 100%;
    height: auto;
    padding: 0.3rem;
    bottom: 0;
    background: #fff;
    z-index: 101;
    text-align: center;
}
.hdxq_hf_box .hdxq_hf_cont textarea {
    width: 90%;
    height: 100px;
    overflow: auto;
    border: 1px solid #dfdfdf;
    border-radius: 5px;
    color: #333;
    font-size:24rpx;
    padding: 20rpx;
    text-align:left;
}
.hdxq_hf_box .hdxq_hf_cont .qx_btn {
    background: #fff;
    color: #333;
    font-size: 3.5vw;
    line-height: 1.75;
    display: inline-block;
    padding: 0.12rem 0.5rem;
    border-radius: 5px;
    border: 1px solid #cdcdcd;
    margin: 0.3rem 0.3rem 0 0.3rem;
}
.hdxq_hf_box .hdxq_hf_cont .fs_btn {
    background: #641045;
    color: #fff;
    font-size: 3.5vw;
    line-height: 1.75;
    display: inline-block;
    padding: 0.12rem 0.5rem;
    border-radius: 5px;
    border: 1px solid #641045;
    margin: 0.3rem 0.3rem 0 0.3rem;
}
.hdxq_hf_box .hdxq_hf_cont .tb_btn~.qx_btn, .hdxq_hf_box .hdxq_hf_cont .tb_btn~.fs_btn {
    margin: 0.1rem 0.3rem 0 0.3rem;
}
