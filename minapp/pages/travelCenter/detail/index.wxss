.content .cont_head{
  display: table;
  width: 100%;
  color: #333;
  font-size: 0.28rem;
}
.content .cont_head .cell_ico{
  display: table-cell;
  vertical-align: middle;
  color: #333;
  font-size: 0.28rem;
  width: 45px;
}
.content .cont_head .cell_name{
  color: #222;
  font-size: 14px;
  line-height: 1.75;
  display: table-cell;
  vertical-align:middle;
}
.content .cont_head .cell_time{
  color: #777;
  font-size: 12px;
  line-height: 1.75;
  display: table-cell;
  text-align: right;
  vertical-align:middle;
}
.content .cont_head .cell_right{
  display:table-cell;
  font-size:24rpx;
  margin-left:5rpx;
  color:#2c2c2c;
  vertical-align:middle;
  width:110rpx;
  text-align:center;
  border-radius:10rpx;
  border:2rpx solid #bfbfbf;
  float: right;
  margin-top: 20rpx
}
.content .cont_head .cell_right .text{
  background-color:green;
  color:white;
  height:25px;
  vertical-align:middle;
  line-height:25px;
  border-radius:10px;
}
.content .cont_head .cell_right .text.finish{
  background-color:#66ccff;
}
.head_btn{
  font-size:24rpx;
  border-bottom:1px solid #c4c4c4;
  width:100%;
  text-align:right;
  margin-top: 20rpx
}
.head_btn .cell_btn{
  display: inline-block;
  margin-left: 20rpx
}
.head_btn .cell_tags{
  display:inline-block;
  font-size:18rpx;
  color:white;
  float: left
}
.head_btn .cell_tags .item_tag{
  display:inline-block;
  margin:0 4rpx;
  background-color:#3695E6;
  border-radius:20rpx;
  width:70rpx;
  height:28rpx;
  text-align:center;
}
.btn_img{
  width:24rpx;
  height:24rpx;
}
.hdxq_hf_box {
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 99;
    background: rgba(0,0,0,0.5);
    display: none;
}
.hdxq_hf_box.open {
    display: block;
}
.hdxq_hf_box .hdxq_hf_cont {
    position: fixed;
    width: 100%;
    height: auto;
    padding: 0.3rem;
    bottom: 0;
    background: #fff;
    z-index: 101;
    text-align: center;
}
.hdxq_hf_box .hdxq_hf_cont textarea {
    width: 90%;
    height: 100px;
    overflow: auto;
    border: 1px solid #dfdfdf;
    border-radius: 5px;
    color: #333;
    font-size:24rpx;
    padding: 20rpx;
    text-align:left;
}
.hdxq_hf_box .hdxq_hf_cont .qx_btn {
    background: #fff;
    color: #333;
    font-size: 3.5vw;
    line-height: 1.75;
    display: inline-block;
    padding: 0.12rem 0.5rem;
    border-radius: 5px;
    border: 1px solid #cdcdcd;
    margin: 0.3rem 0.3rem 0 0.3rem;
}
.hdxq_hf_box .hdxq_hf_cont .fs_btn {
    background: #641045;
    color: #fff;
    font-size: 3.5vw;
    line-height: 1.75;
    display: inline-block;
    padding: 0.12rem 0.5rem;
    border-radius: 5px;
    border: 1px solid #641045;
    margin: 0.3rem 0.3rem 0 0.3rem;
}
.hdxq_hf_box .hdxq_hf_cont .tb_btn~.qx_btn, .hdxq_hf_box .hdxq_hf_cont .tb_btn~.fs_btn {
    margin: 0.1rem 0.3rem 0 0.3rem;
}
.reply_list .reply_title{
  font-size:15px;
  line-height:30px;
  border-bottom:1px solid #F7F7F6;
}
.reply_list .reply_item{
  margin-top: 10px;
  border-bottom:2rpx solid #c4c4c4;
}
.reply_list .reply_item .rank_name{
  display: table;
  width: 97%
}
.reply_list .reply_item .rank_name .cell_ico{
  display: table-cell;
  width: 45px
}
.reply_list .reply_item .rank_name .cell_name{
  display: table-cell;
  font-size: 14px;
  vertical-align:middle;
}
.reply_list .reply_item .rank_name .cell_time{
  display: table-cell;
  font-size: 24rpx;
  color:#777;
  vertical-align:middle;
  text-align:right;
}
.reply_list .reply_item .reply_cont{
  color:#888888;
  vertical-align:middle;
  font-size:14px;
  margin:10px;
}
.reply_list .reply_item .botton_btn{
  font-size:10px;
  display:table;
  width: 97%;
  text-align:right;
}
.reply_list .reply_item .botton_btn .btn_a{
  display:inline-block;
  margin: 0 10px
}
.cont_text .text_box{
  font-size:28rpx;
  color:#999;
  line-height:40rpx;
  margin:0 0 0 0;
  padding:10rpx 0 0 0;
}