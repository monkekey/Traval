.content{
  margin: 20rpx
}
.content .field_item{
  border-bottom: 1px solid #efefef;
  font-size: 30rpx;
  line-height: 50rpx;
  padding: 20rpx 0
}
.content .field_item .field_value{
  font-size: 28rpx
}
.content .field_item .field_value .a_upload{
  width:100rpx;
  height:100rpx;
  line-height:90rpx;
  position:relative;
  cursor:pointer;
  color:#bbb;
  background:#fff;
  border:2px dotted #ddd;
  overflow:hidden;
  display:inline-block;
  text-align:center;
  font-size:30rpx;
}
.down_img{
  width:15px;
  height:15px;
  vertical-align:middle;
}
.btn_box {
  bottom:0;
  margin:0;
  padding:0.3rem 0.3rem;
  background:#fff;
  z-index:99;
}
.btn_box .tj_btn {
  display:block;
  padding:0.2rem;
  text-align:center;
  background:#464356;
  color:#fff;
  font-size:4vw;
  border-radius:3px;
}
.deleteBtn{
  background-color:red;
  border-radius:100%;
  height:30rpx;
  width:30rpx;
  position:absolute;
  line-height:26rpx;
  text-align:center;
  margin-left:-60rpx;
  margin-top:60rpx;
}
